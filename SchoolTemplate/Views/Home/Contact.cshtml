<h1><strong>Contact</strong></h1>
<style>
    h1 {
        text-align: center;
        color: #04789d;
    }
</style>



<br />

@model PersonModel
@{
    ViewData["Title"] = "Contact";
}



@if (Model != null)
{
   <p>
       Je voornaam is: @Model.Voornaam <br />
       Je achternaam is: @Model.Achternaam <br />
   </p>
}

@if(ViewData["formsucces"] == "oke")
{
    <p>Gelukt! Bedankt voor het invullen.</p>
}

<form method="post">
    <input type="text" name="voornaam" placeholder="Voornaam" /> <br /> <br />
    <input type="text" name="achternaam" placeholder="Achternaam" /> <br />
    @Html.ValidationMessageFor(m => m.Achternaam) <br />
    <input type="text" name="email" placeholder="e-mail" /> <br />
    @Html.ValidationMessageFor(m => m.Email) <br />
    <input type="datetime" name="geboortedatum" placeholder="Datum xx-xx-xxxx" /> <br /> <br />
    <input type="submit" value="verstuur" /> 
</form>

<style>
    form {
        text-align: center;
    }
</style>

